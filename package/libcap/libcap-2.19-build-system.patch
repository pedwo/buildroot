+++ libcap-2.19/Make.Rules	2010-12-28 16:44:18.164052748 -0300
@@ -45,25 +45,26 @@
 KERNEL_HEADERS := $(topdir)/libcap/include
 IPATH += -I$(topdir)/libcap/include -I$(KERNEL_HEADERS)
 
-CC := gcc
-CFLAGS := -O2
